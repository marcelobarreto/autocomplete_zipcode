      <%= f.input :street, as: :street %>
      <%= f.input :neighborhood, as: :neighborhood %>
      <%= f.input :city, as: :city %>
      <%= f.input :state, as: :state %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>

